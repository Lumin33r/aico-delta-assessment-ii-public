# =============================================================================
# AI Personal Tutor - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------
AWS_REGION=us-west-2
S3_BUCKET=your-s3-bucket-name

# -----------------------------------------------------------------------------
# Lex Bot Configuration (for frontend build)
# -----------------------------------------------------------------------------
VITE_LEX_BOT_ID=your-lex-bot-id
VITE_LEX_BOT_ALIAS_ID=your-lex-bot-alias-id
VITE_AWS_REGION=us-west-2
VITE_COGNITO_IDENTITY_POOL_ID=us-west-2:your-identity-pool-id

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# For containerized deployment, use /api (nginx proxies to backend)
VITE_API_URL=/api

# -----------------------------------------------------------------------------
# Ollama Configuration
# -----------------------------------------------------------------------------
OLLAMA_MODEL=llama3.2:1b

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
